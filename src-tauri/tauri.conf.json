{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mcprouter",
  "version": "0.1.0",
  "identifier": "com.xijun.mcprouter",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:55323",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "MCP Router",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
